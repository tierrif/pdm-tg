<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.pdm_tg.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_newTodoFragment"
            app:destination="@id/newTodoFragment" />
        <action
            android:id="@+id/action_mainFragment_to_newListFragment"
            app:destination="@id/newListFragment" />
    </fragment>
    <fragment
        android:id="@+id/newTodoFragment"
        android:name="com.example.pdm_tg.ui.NewTodoFragment"
        android:label="NewTodoFragment" />
    <fragment
        android:id="@+id/newListFragment"
        android:name="com.example.pdm_tg.ui.NewListFragment"
        android:label="NewListFragment" />
</navigation>